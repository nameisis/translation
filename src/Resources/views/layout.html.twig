<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block nameisis_title %}{% endblock %}</title>
        {% block nameisis_stylesheets %}
            <link href="{{ preload(asset('bundles/nameisistranslation/css/vendor/icon.css')) }}" rel="stylesheet">
            <link rel="stylesheet" href="{{ preload(asset('bundles/nameisistranslation/css/vendor/materialize.min.css')) }}">
        {% endblock %}
    </head>
    <body>
        {% block nameisis_flash_message %}
            {% set flashes = app.session.flashbag.all() %}
            {% if flashes | length > 0 %}
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            {% for type, messages in flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ type }}">{{ message }}</div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endblock nameisis_flash_message %}

        {% block nameisis_content '' %}

        {% block nameisis_javascript_footer %}
            <script src="{{ preload(asset('bundles/nameisistranslation/js/vendor/jquery-3.3.1.min.js')) }}"></script>
            <script src="{{ preload(asset('bundles/nameisistranslation/js/vendor/materialize.min.js')) }}"></script>
            <script src="{{ preload(asset('bundles/nameisistranslation/js/vendor/angular.min.js')) }}"></script>
            <script src="{{ preload(asset('bundles/nameisistranslation/ng-table/ng-table.min.js')) }}"></script>
        {% endblock %}
    </body>
</html>
